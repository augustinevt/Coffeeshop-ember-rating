

<div class="container">
  <div class="row">
    <div class="col-sm-5 height-control shops-list">
      <h3>This is shops</h3>
      <div class="row">
        {{#each model as |shop|}}
          <div class="col-sm-6">
            {{#link-to 'shops.shop' shop.id}}
              {{shop-tile shop=shop}}
            {{/link-to}}
          </div>
        {{/each}}
      </div>
      <div class="row">
        <div class="col-sm-12">
          {{new-shop saveShop="saveShop"}}
        </div>
      </div>
    </div>
    <div class="col-sm-7 height-control shop-container">
      {{outlet}}
    </div>
  </div>
</div>
