<div class="col-sm-10 col-sm-offset-1 img-center">
  <img class="img-fluid hero" src="{{model.image}}" alt="photo of {{model.name}}" />
</div>
<div class="header">
  <h1>{{model.name}}</h1>
</div>


<div class="row">
  {{#each model.reviews as |review|}}
    <div class="col-sm-10 col-sm-offset-1 well">
      {{review-tile review=review}}
    </div>
  {{/each}}
</div>

<div class="favorites">
  {{favorites-button shop=model}}
</div>

{{new-review shop=model saveReview="saveReview"}}
